@model IEnumerable<MvcAlexRodolfo.Models.Jogos>

@{
    ViewBag.Title = "Lista de Jogos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Read</h2>

<p>
    @Html.ActionLink("Cadastrar", "Create") |

    @Html.ActionLink("Voltar", "Index") 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FaixaEtaria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FaixaEtaria)
        </td>
        <td>
            @Html.ActionLink("Editar", "Update", new { id = item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
